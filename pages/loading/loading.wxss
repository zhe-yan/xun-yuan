/* pages/loading/loading.wxss */
.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #E4E4E4;
  background-image: -webkit-linear-gradient(top, #8666b8 0%, #f4f4f4 51%);
}

.logo{
  position: absolute;
  top:50%;
  left: 50%;
  width: 220px;
  height: 150px;
  margin-top: -140px;
  margin-left: -110px;
  text-align: center;
}

.logoimg{
  position: relative;
  width: 100%;
  height: 100%;
}

.event.listening {
  background-color:#333333;
  display:block;
}

.event.received {
  background-color:#4B946A;
  display:none;
}

.event {
  border-radius:4px;
  -webkit-border-radius:4px;
  color:#FFFFFF;
  font-size:12px;
  margin:0px 30px;
  padding:2px 0px;
}

@keyframes fade {
  from { opacity: 1.0; }
  50% { opacity: 0.4; }
  to { opacity: 1.0; }
}

@-webkit-keyframes fade {
  from { opacity: 1.0; }
  50% { opacity: 0.4; }
  to { opacity: 1.0; }
}

.blink {
  animation:fade 3000ms infinite;
}